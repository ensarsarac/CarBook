@model List<ResultCarPricingWithAllTimePeriod>
@{
	ViewData["Title"] = "Index";
	ViewData["Text1"] = "Ana Sayfa";
	ViewData["Text2"] = "Araç Ödemeleri";
	Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="car-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th class="bg-primary heading">Günlük Kiralama Ücreti</th>
								<th class="bg-dark heading">Haftalık Kiralama Ücreti</th>
								<th class="bg-black heading">Aylık Kiralama Ücreti</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr class="">
									<td class="car-image"><div class="img" style="background-image:url(@item.CoverImage);"></div></td>
									<td class="product-name">
										<h3>@item.Model @item.BrandName</h3>
										<p class="mb-0 rated">
											<span>Puanı:</span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
										</p>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Aracı Kirala</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">$</small> @item.DailyAmount</span>
												<span class="per">/Günlük</span>
											</h3>
											<span class="subheading">$3/hour fuel surcharges</span>
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Rent a car</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">$</small> @item.WeeklyAmount</span>
												<span class="per">/Haftalık</span>
											</h3>
											<span class="subheading">$3/hour fuel surcharges</span>
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Rent a car</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">$</small> @item.MonthlyAmount</span>
												<span class="per">/Aylık</span>
											</h3>
											<span class="subheading">$3/hour fuel surcharges</span>
										</div>
									</td>
								</tr>
							}
							<!-- END TR-->


						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</section>


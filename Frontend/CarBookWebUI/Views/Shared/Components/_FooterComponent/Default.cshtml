@model GetFooterAddress

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
	$(document).ready(function () {
		$("#btn1").click(function () {
			swal("Şartlar & Koşullar", "Araba kiralama sürecine dair tüm hizmet kouşullarına rezervasyonun fiziki olarak gerçekleştireceği ofislerimizde yer alan anlaşma dokümanlarından ulaşabilirsini. Bütün sürecin hasar, ceza, geçişler (hgs.. vs) ile ilgili detaylar yer almaktadır. Keyifli yolculuklar dileriz.");
		});
	});

	$(document).ready(function () {
		$("#btn2").click(function () {
			swal("Güvenlik", "CarBook Web Sitemiz asp.net core teknolojinse sha256 şifreleme tekniği ile verilerin tamamen şifreli olarak tutulması alt yapısına aittir. Sistemimizde JWT doğrulaması yapılmaktadır.Kullanıcılarımızın ödeme yaptıkları kart bilgileri sistemde kesinlikle saklanmamaktadır. TC Kimlik numarası mail adresi ve telefon gibi bilgiler ise şifrelenerek tutulmaktadır.");
		});
	});

	$(document).ready(function () {
		$("#btn3").click(function () {
			swal("Çerez Politikası", "Sizlere daha iyi bir hizmet sunabilmek adına tarayıcı çerezlerini kullanmaktayız.");
		});
	});

	$(document).ready(function () {
		$("#btn4").click(function () {
			swal("Sıkça Sorulan Sorular", "Sistem ile ilgili sık sorulan yer alır.");
		});
	});
	$(document).ready(function () {
		$("#btn5").click(function () {
			swal("Ödeme Yöntemleri", "Ödeme işlemleri yalnızca fiziki lokasyonlarımızda ki kiralama noktalarında kart ile yapılmaktadır.");
		});
	});
	$(document).ready(function () {
		$("#btn6").click(function () {
			swal("Nasıl Çalışır", "1. Adım Aracınızı Kiralayın \n 2. Adım Mailinizi Kontrol Edin \n 3. Adım Ofisimize Gelin.");
		});
	});
</script>


<footer class="ftco-footer ftco-bg-dark ftco-section">
	<div class="container">
		<div class="row mb-5">
			<div class="col-md">
				<div class="ftco-footer-widget mb-4">
					<h2 class="ftco-heading-2"><a href="#" class="logo">Car<span>book</span></a></h2>
					<p>@Model.Description</p>
					<ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
						<li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
						<li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
						<li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
					</ul>
				</div>
			</div>
			<div class="col-md">
				<div class="ftco-footer-widget mb-4 ml-md-5">
					<h2 class="ftco-heading-2">Hızlı Linkler</h2>
					<ul class="list-unstyled">
						<li><a href="/Default/About/" class="py-2 d-block">Hakkımızda</a></li>
						<li><a href="/Service/Index/" class="py-2 d-block">Hizmetler</a></li>
						<li><a href="#" id="btn1" class="py-2 d-block">Şartlar & Koşullar</a></li>
						<li><a href="#" id="btn2" class="py-2 d-block">Güvenlik</a></li>
						<li><a href="#" id="btn3" class="py-2 d-block">Çerez Politikası</a></li>
					</ul>
				</div>
			</div>
			<div class="col-md">
				<div class="ftco-footer-widget mb-4">
					<h2 class="ftco-heading-2">Müşteri Desteği</h2>
					<ul class="list-unstyled">
						<li><a href="#" id="btn4" class="py-2 d-block">Sıkça Sorulanlar</a></li>
						<li><a href="#" id="btn5" class="py-2 d-block">Ödeme Yöntemleri</a></li>
						<li><a href="/CarPricing/Index/" class="py-2 d-block">Kiralama</a></li>
						<li><a href="#" id="btn6" class="py-2 d-block">Nasıl Çalışır</a></li>
						<li><a href="/Contact/Index/" class="py-2 d-block">Bize Yazın</a></li>
					</ul>
				</div>
			</div>
			<div class="col-md">
				<div class="ftco-footer-widget mb-4">
					<h2 class="ftco-heading-2">Bir sorunuz mu var?</h2>
					<div class="block-23 mb-3">
						<ul>
							<li><span class="icon icon-map-marker"></span><span class="text">@Model.Address</span></li>
							<li><a href="#"><span class="icon icon-phone"></span><span class="text">@Model.PhoneNumber</span></a></li>
							<li><a href="#"><span class="icon icon-envelope"></span><span class="text">@Model.Email</span></a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 text-center">

				<p>
					<!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->

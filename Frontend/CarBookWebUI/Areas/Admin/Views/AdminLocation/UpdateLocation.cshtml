@model UpdateLocationDto
@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Lokasyon Güncelleme Sayfası</h4>
        <p class="card-subtitle mb-4">Araçların yer aldığı ve teslim eildiği noktalara ait lokasyon bilgisinin girildiği sayfadır. Bilgileri eksiksiz olarak doldurun.</p>
        <form method="post">
            <input type="hidden" asp-for="LocationID" />
            <div class="form-group">
                <label class="form-label">Lokasyon Adı</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Lokasyon Adı Girişi Yapınuz">
            </div>
            <button type="submit" class="btn btn-primary waves-effect waves-light">Lokasyonu Güncelle</button>
        </form>
    </div>
</div>
@model List<GetCategoryList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kategori Listesi</h4>
                <p class="card-subtitle mb-4">
                    Kategoriler ile ilgili kategori listesi, kategori üzerinde düzenleme ve bir kategori kaldırma işlemini buradan gerçekleştirebilirsiniz.
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td><a href="/Admin/AdminCategory/RemoveCategory/@item.CategoryID/" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminCategory/UpdateCategory/@item.CategoryID/" class="btn btn-outline-warning">Düzenle</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    @if (Model.Count <= 0)
                    {
                        <h4 class="my-3">Herhangi bir marka bulunamadı.</h4>
                    }
                    <a href="/Admin/AdminCategory/CreateCategory/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
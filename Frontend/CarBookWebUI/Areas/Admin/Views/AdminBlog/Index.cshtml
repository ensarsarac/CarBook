@model List<GetBlogListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog Listesi</h4>
                <p class="card-subtitle mb-4">
                    Blog ile ilgili Blog listesi, Blog üzerinde düzenleme ve bir Blog kaldırma işlemini buradan gerçekleştirebilirsiniz.
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Yazar</th>
                                <th>Kategori</th>
                                <th>Tarih</th>
                                <th>Kaldır</th>
                                <th>Bloğu Aç</th>
                                <th>Yorumlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.AuthorName</td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.CreateDate.ToString("dd-MM-yyyy")</td>
                                        <td><a href="/Admin/AdminBlog/RemoveBlog/@item.BlogId/" class="btn btn-outline-danger">Kaldır</a></td>
                                        <td><a href="/Blog/BlogDetails/@item.BlogId/" class="btn btn-outline-dark">Bloğu Aç</a></td>
                                        <td><a href="/Admin/AdminBlog/BlogListByBlogId/@item.BlogId/" class="btn btn-outline-dark">Yorumlar</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    @if (Model.Count <= 0)
                    {
                        <h4 class="my-3">Herhangi bir blog bulunamadı.</h4>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
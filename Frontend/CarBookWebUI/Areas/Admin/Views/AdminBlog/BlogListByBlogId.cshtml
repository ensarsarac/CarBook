@model List<GetCommentByBlog>
@{
    ViewData["Title"] = "BlogListByBlogId";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18"><span class="text-primary">@Model[0].BlogName </span>  Bloğuna Ait Yorumlar Listesi</h4>
            <hr />

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Pages</a></li>
                    <li class="breadcrumb-item active">Cards</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    @if(Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-4">
                <div class="card card-body">
                    <h4 class="card-title"><img src="~/@item.AuthorImage" width="50" height="50" style="margin-right:10px" /> @item.AuthorName</h4>
                    <hr />
                    <p class="card-text">
                        @item.Description
                    </p>
                    <a href="#" class="btn btn-primary waves-effect waves-light">Detaylı Gör</a>
                </div>
            </div>
        }
    }
    else
    {
        <h4>Henüz bu bloğa yorum yapılmadı..</h4>
    }

</div>
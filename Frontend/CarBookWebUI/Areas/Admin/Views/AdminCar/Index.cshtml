
@model List<GetCarWithBrandDtos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Araba Listesi</h4>
                <p class="card-subtitle mb-4">
                    Arabalarla ilgili ekleme, silme, güncelleme, arama ve listeleme gibi işlemleri bu sayfa üzerinden gerçekleştirebilirsiniz.
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Vites Türü</th>
                                <th>Km</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                                <th>Özellikler</th>
                                <th>Özellik Ata</th>
                                <th>Sitede Gör</th>
                                <th>Fiyat Bilgileri</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Brand</td>
                                    <td>@item.Model</td>
                                    <td>@item.Transmission</td>
                                    <td>@item.Km</td>
                                    <td><a href="/Admin/AdminCar/RemoveCar/@item.CarID/" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/AdminCar/UpdateCar/@item.CarID/" class="btn btn-outline-success">Düzenle</a></td>
                                    <td><a href="/Admin/AdminCar/CarDetails/@item.CarID/" class="btn btn-outline-dark">Özellikler</a></td>
                                    <td><a href="/Admin/AdminCar/CreateCarFeatureByCar/@item.CarID/" class="btn btn-outline-info">Özellik Ata</a></td>
                                    <td><a href="/Cars/CarDetails/@item.CarID/" class="btn btn-outline-warning">Sitede Gör</a></td>
                                    <td><a href="/Admin/AdminCar/CarDeatils/@item.CarID/" class="btn btn-outline-secondary">Fiyat Bilgileri</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/AdminCar/CreateCar/" class="btn btn-outline-primary">Yeni Araç Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>


@model List<GetBrandDtos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Araba Markaları Listesi</h4>
                <p class="card-subtitle mb-4">
                    Arabalarla ilgili marka listesi, markalar üzerinde düzenleme ve bir markayı kaldırma işlemini buradan gerçekleştirebilirsiniz.
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Özellik</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                                <th>Markaya Ait Araçlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.name</td>
                                        <td><a href="/Admin/AdminBrand/RemoveBrand/@item.brandID/" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminBrand/UpdateBrand/@item.brandID/" class="btn btn-outline-warning">Düzenle</a></td>
                                        <td><a href="/Admin/AdminBrand/UpdateBrand/@item.brandID/" class="btn btn-outline-dark">Markaya Ait Araçlar</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    @if (Model.Count <= 0)
                    {
                        <h4 class="my-3">Herhangi bir marka bulunamadı.</h4>
                    }
                    <a href="/Admin/AdminBrand/CreateBrand/" class="btn btn-outline-primary">Yeni Marka Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
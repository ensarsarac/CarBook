@model List<GetAuthorListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Listesi</h4>
                <p class="card-subtitle mb-4">
                    Yazarlar ile ilgili marka listesi, markalar üzerinde düzenleme ve bir markayı kaldırma işlemini buradan gerçekleştirebilirsiniz.
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Yazar Ad Soyad</th>
                                <th>Yazar Açıklaması</th>
                                <th>Yazar Resim Url</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td><img src="~/@item.ImageUrl" style="width:50px;height:50px; margin-right:10px;"/>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a href="/Admin/AdminAuthor/RemoveAuthor/@item.AuthorID/" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminAuthor/UpdateAuthor/@item.AuthorID/" class="btn btn-outline-warning">Düzenle</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    @if (Model.Count <= 0)
                    {
                        <h4 class="my-3">Herhangi bir yazar bulunamadı.</h4>
                    }
                    <a href="/Admin/AdminAuthor/CreateAuthor/" class="btn btn-outline-primary">Yeni Yazar Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
@model CreateAuthorDto
@{
    ViewData["Title"] = "CreateAuthor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body">

        <h4 class="card-title">Yeni Yazar Girişi</h4>
        <p class="card-subtitle mb-4">Yazar ile ilgili bilgileri eksiksiz doldurmanız önemlidir. Yazar girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>

        <form method="post">
            <div class="form-group">
                <label class="form-label">Yazar Adı ve Soyadı</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Yazar Ad ve Soyad Girişi Yapınuz">
            </div>
            <div class="form-group">
                <label class="form-label">Yazar Açıklama</label>
                <textarea class="form-control" cols="7" rows="10" asp-for="Description" placeholder="Yazar Açıklama Girişi Yapınuz"></textarea>
            </div>
         
            <div class="form-group">
                <label class="form-label">Yazar Resim Url</label>
                <input type="text" class="form-control" asp-for="ImageUrl" placeholder=" Yazar Image Url Girişi Yapınuz">
            </div>
            <button type="submit" class="btn btn-primary waves-effect waves-light">Yazarı Kaydet</button>
        </form>

    </div>
</div>

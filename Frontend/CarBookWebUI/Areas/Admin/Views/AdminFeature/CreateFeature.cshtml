
@model CreateFeatureDto

@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Yeni Araç Özelliği Girişi</h4>
        <p class="card-subtitle mb-4">Araç ile ilgili özellikleri eksiksiz doldurmanız önemlidir. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
        <form method="post">
            <div class="form-group">
                <label class="form-label">Özellik</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Özellik Girişi Yapınuz">
            </div>  
            <button type="submit" class="btn btn-primary waves-effect waves-light">Özelliği Kaydet</button>
        </form>
    </div>
</div>

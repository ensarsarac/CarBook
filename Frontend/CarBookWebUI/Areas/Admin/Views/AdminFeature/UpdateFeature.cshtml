
@model UpdateFeatureDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body">

        <h4 class="card-title">Araç Özelliği Güncelleme Sayfası</h4>
        <p class="card-subtitle mb-4">Araç ile ilgili özellikleri eksiksiz doldurmanız önemlidir. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>

        <form method="post">
            <input type="hidden" asp-for="FeatureID" />
            <div class="form-group">
                <label class="form-label">Özellik</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Özellik Girişi Yapınuz">
            </div>


            <button type="submit" class="btn btn-primary waves-effect waves-light">Özelliği Güncelle</button>
        </form>

    </div> <!-- end card-body-->
</div> <!-- end card-->
